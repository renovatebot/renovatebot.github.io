{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>renovatebot/.github", "customManagers:makefileVersions"],
  "semanticCommitScope": "deps",
  "minimumReleaseAge": "3 days",
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "No minimum release age for some packages",
      "matchDepNames": [
        "deps/renovate",
        "https://github.com/renovatebot/renovate.git",
        "renovatebot/renovate",
        "ghcr.io/containerbase/**"
      ],
      "minimumReleaseAge": null
    },
    {
      "matchDepNames": [
        "deps/renovate",
        "https://github.com/renovatebot/renovate.git",
        "renovatebot/renovate"
      ],
      "groupName": "Renovate",
      // For the following files:
      // deps/renovate
      // Makefile
      // bin/get-docs.sh
      "minimumGroupSize": 3
    },
    {
      "matchUpdateTypes": ["minor"],
      "automerge": false,
      "matchManagers": ["pep621", "poetry"]
    },
    {
      "description": "Separate python minor from patch versions because of delayed availability",
      "matchDepNames": ["python"],
      "separateMinorPatch": true
    },
    {
      "description": "Require dashboard approval for python minor versions because of delayed availability",
      "matchUpdateTypes": ["minor"],
      "matchDepNames": ["python"],
      "dependencyDashboardApproval": true
    },
    {
      "matchManagers": ["git-submodules"],
      "automerge": true,
      "automergeType": "branch",
      "semanticCommitScope": "docs",
      "minimumReleaseAge": null
    }
  ]
}
